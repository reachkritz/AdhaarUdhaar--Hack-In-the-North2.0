<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hint.paranoid.aadharudhaar">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BorrowActivity"
            android:label="@string/title_activity_borrow"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LendActivity"
            android:label="@string/title_activity_lend"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddLendActivity"
            android:label="@string/title_activity_addor_edit_lend"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddBorrowActivity"
            android:label="@string/title_activity_add_borrow"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowLendActivity"
            android:label="@string/title_activity_show_lend"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".barchart"
            android:screenOrientation="portrait" />
        <activity
            android:name=".piechart"
            android:screenOrientation="portrait" />
        <activity
            android:name=".linechart"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowBorrowActivity"
            android:label="@string/title_activity_show_borrow"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditBorrowActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditLendActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".SaveAadhaarActivity"></activity>
    </application>

</manifest>